<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegActivity">


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="243dp"
            android:background="@color/inputRegAuth"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20px"
                android:gravity="center"
                android:text="@string/registration"
                android:textColor="@color/mainText"
                android:textSize="40sp"
                app:fontFamily="@font/my_font" />

            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginTop="50px"
                android:layout_marginRight="50px"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/mainText"
                android:textSize="30sp"
                app:fontFamily="@font/my_font" />

            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:textColor="@color/mainText"
                android:textSize="30sp"
                app:fontFamily="@font/my_font" />

            <EditText
                android:id="@+id/input_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:layout_marginRight="50px"
                android:layout_marginBottom="10px"
                android:ems="10"
                android:hint="@string/passwordRep"
                android:inputType="textPassword"
                android:textColor="@color/mainText"
                android:textSize="30sp"
                app:fontFamily="@font/my_font" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/btnRegAuth"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_login"
                    android:layout_width="51dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onBackClick"
                    app:srcCompat="@drawable/login" />

                <ImageView
                    android:id="@+id/btn_reg"
                    android:layout_width="34dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onRegClick"
                    app:srcCompat="@drawable/registr" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>